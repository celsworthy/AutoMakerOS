                        </distributionDirectory>
                    </distributionFileList>
                </folder>
            </folderList>
            <postInstallationActionList>
                <actionGroup>
                    <explanation>x86</explanation>
                    <actionList>
                        <runProgram>
                            <abortOnError>0</abortOnError>
                            <explanation>${msg(AutoMakerInstaller.installingWindowsDrivers)}</explanation>
                            <program>${commondir}\windows_drivers\dpinst_x86.exe</program>
                            <programArguments>/q /sw /se /c</programArguments>
                            <progressText>${msg(AutoMakerInstaller.installingWindowsDrivers)}</progressText>
                            <showMessageOnError>0</showMessageOnError>
                            <ruleList>
                                <compareText>
                                    <logic>does_not_equal</logic>
                                    <text>${installer_interactivity}</text>
                                    <value>normal</value>
                                </compareText>
                            </ruleList>
                        </runProgram>
                        <runProgram>
                            <abortOnError>0</abortOnError>
                            <explanation>${msg(AutoMakerInstaller.installingWindowsDrivers)}</explanation>
                            <program>${commondir}\windows_drivers\dpinst_x86.exe</program>
                            <programArguments>/c</programArguments>
                            <progressText>${msg(AutoMakerInstaller.installingWindowsDrivers)}</progressText>
                            <showMessageOnError>0</showMessageOnError>
                            <ruleList>
                                <compareText>
                                    <logic>equals</logic>
                                    <text>${installer_interactivity}</text>
                                    <value>normal</value>
                                </compareText>
                            </ruleList>
                        </runProgram>
                        <logMessage>
                            <text>${program_stdout}</text>
                        </logMessage>
                        <logMessage>
                            <text>${program_stderr}</text>
                        </logMessage>
                    </actionList>
                    <ruleList>
                        <platformTest>
                            <type>windows-x86</type>
                        </platformTest>
                    </ruleList>
